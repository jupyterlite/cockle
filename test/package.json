        "test:integration:ui": "playwright test --ui",
        "test:integration:report": "playwright show-report",
        "test:unit": "jest"
    },
    "devDependencies": {
        "@jupyterlite/cockle": "file:../",
        "@playwright/test": "^1.45.3",
        "@rspack/cli": "^0.7.5",
        "@rspack/core": "^0.7.5",
        "@types/jest": "^29.5.14",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.0",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    }
}
