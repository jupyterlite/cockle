{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022"
  },
  "include": ["src/*"]
}
