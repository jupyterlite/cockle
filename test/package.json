{
    "name": "cockle-tests",
    "version": "1.0.0",
    "description": "Cockle tests",
    "license": "BSD-3-Clause",
    "author": "Ian Thomas",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "private": true,
    "scripts": {
        "build": "rspack build",
        "postbuild": "node node_modules/@jupyterlite/cockle/lib/tools/prepare_wasm.js --copy assets",
        "serve": "rspack serve",
        "test": "npm run test:unit && npm run test:integration",
